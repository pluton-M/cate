/*
 * 19) Crear un programa que pida al usuario una velocidad en Km/h, la convierta a m/s e informe por consola la conversi√≥n. 
 */
package ejericicios;

import java.util.Scanner;

public class EjercicioDiecinueve {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Introduce la velocidad en Km/h: ");
        double kmh = scanner.nextDouble();
        
        double ms = kmh * 1000 / 3600;
        
        System.out.println(kmh + " Km/h son " + ms + " m/s");
        
        scanner.close();
    }
}
