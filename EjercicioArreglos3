/*
 * 3) Crear un programa que llene un arreglo con los números pares comprendidos entre 1 y 100 y luego los muestre por consola 
 * indicando los índices correspondientes a cada valor.
 */
package ejercicios;

public class Ter {
    public static void main(String[] args) {
        int[] numeros = new int[50];

        // Llenar el arreglo con los números pares entre 1 y 100
        for (int i = 0, num = 2; i < numeros.length; i++, num += 2) {
            numeros[i] = num;
        }

        System.out.println("Arreglo con números pares entre 1 y 100:");
        for (int i = 0; i < numeros.length; i++) {
            System.out.println("Índice " + i + ": " + numeros[i]);
        }
    }
}
