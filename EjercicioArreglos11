/*
 * 11) Crear un programa que lea una cadena de caracteres introducida desde el teclado por el usuario y la muestre al revés.
 */
package ejercicios;

import java.util.Scanner;

public class Arreglo11 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Solicitar una cadena al usuario
        System.out.print("Ingrese una cadena de texto: ");
        String cadena = scanner.nextLine();

        // Mostrar la cadena al revés
        String cadenaInvertida = new StringBuilder(cadena).reverse().toString();
        System.out.println("Cadena invertida: " + cadenaInvertida);
    }
}
