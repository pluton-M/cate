/*
 * 2) Crear un programa que llene un arreglo con los números enteros comprendidos entre 4 y 14, y luego lo muestre por consola 
 * indicando los índices correspondientes a cada valor. 
 */
package ejercicios;

public class Seg {

	public static void main(String[] args) {
		int[] numeros = new int[11];  // Hay 11 números entre 4 y 14 inclusive

        // Llenar el arreglo con los números entre 4 y 14
        for (int i = 0; i < numeros.length; i++) {
            numeros[i] = 4 + i;
        }

        // Mostrar el arreglo con los índices correspondientes
        System.out.println("Los números entre 4 y 14 son:");
        for (int i = 0; i < numeros.length; i++) {
            System.out.println("Índice " + i + ": " + numeros[i]);
        }

	}

}
