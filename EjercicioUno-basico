/*
 * 1) Crear un programa que informe su peso efectivo en la luna, sabiendo que este será un 17% respecto a su peso en la tierra. 
 */
package ejericicios;

import java.util.Scanner;

public class EjercicioUno {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
        System.out.print("Ingresa tu peso en la Tierra: ");
        double pesoTierra = scanner.nextDouble();

        double pesoLuna = pesoTierra * 0.17;
        System.out.println("Tu peso en la Luna sería: " + pesoLuna);

        scanner.close();
    }
}
