/*
 * 13) Crear un programa en donde se almacenen los números del 1 al 100 en un vector, y se informe por consola los números pares 
 * e impares.
 */
package ejercicios;

public class Arreglo13 {
    public static void main(String[] args) {
        int[] numeros = new int[100];

        // Llenar el arreglo con los números del 1 al 100
        for (int i = 0; i < numeros.length; i++) {
            numeros[i] = i + 1;
        }

        // Mostrar números pares e impares
        System.out.println("Números pares:");
        for (int num : numeros) {
            if (num % 2 == 0) {
                System.out.println(num);
            }
        }

        System.out.println("Números impares:");
        for (int num : numeros) {
            if (num % 2 != 0) {
                System.out.println(num);
            }
        }
    }
}
