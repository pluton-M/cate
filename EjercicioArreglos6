/*
 * 6) Crear un programa que llene un arreglo con los veinte primeros números pares y calcule su suma, informando el resultado. 
 */

package ejercicios;

public class Arreglo6 {
    public static void main(String[] args) {
        int[] numeros = new int[20];
        int suma = 0;

        for (int i = 0; i < numeros.length; i++) {
            numeros[i] = (i + 1) * 2;  // para que solo sean numeros pares
            suma += numeros[i];
        }


        System.out.println("Arreglo con los veinte primeros números pares:");
        for (int i = 0; i < numeros.length; i++) {
            System.out.println("Índice " + i + ": " + numeros[i]);
        }

        // Informar el resultado de la suma
        System.out.println("La suma de los veinte primeros números pares es: " + suma);
    }
}
